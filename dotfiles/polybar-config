[colors]
background = #aa222222
background-alt = #aa444444
foreground = #dfdfdf
foreground-alt = #999999
primary = #bbffb52a
secondary = #bbf94444
ternary = #bbf97444
alert = #ccbd2c40
border = #dd111111

[bar/xenon]
modules-left = i3 bspwm
modules-center = title
modules-right = cpuload temperature_desktop wired volume date

monitor = ${env:MONITOR:DisplayPort-0}
width = 100%
height = 20
radius = 2.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 1
overline-color = #F00

border-size = 1
border-color = ${colors.border}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = FiraCode:size=9;3

[bar/neon]
modules-left = i3 bspwm
modules-center = 
modules-right = cpuload cpufreq cpugraph temperature wireless battery battery_usage volume backlight date

monitor = ${env:MONITOR:LVDS1}
width = ${bar/xenon.width}
height = ${bar/xenon.height}

radius = ${bar/xenon.radius}
fixed-center = ${bar/xenon.fixed-center}

background = ${bar/xenon.background}
foreground = ${bar/xenon.foreground}

overline-size = ${bar/xenon.overline-size}
overline-color = ${bar/xenon.overline-color}

border-size = ${bar/xenon.border-size}
border-color = ${bar/xenon.border-color}

padding-left = ${bar/xenon.padding-left}
padding-right = ${bar/xenon.padding-right}

module-margin-left = ${bar/xenon.module-margin-left}
module-margin-right = ${bar/xenon.module-margin-right}

font-0 = ${bar/xenon.font-0}

[bar/generic]
modules-left = memory cpuload cpugraph
modules-center = i3 bspwm
modules-right = volume date

monitor = ${env:MONITOR:Virtual-1}
monitor-fallback = ${env:MONITOR:eDP1}
width = ${bar/xenon.width}
height = ${bar/xenon.height}

radius = ${bar/xenon.radius}
fixed-center = ${bar/xenon.fixed-center}

background = ${bar/xenon.background}
foreground = ${bar/xenon.foreground}

overline-size = ${bar/xenon.overline-size}
overline-color = ${bar/xenon.overline-color}

border-size = ${bar/xenon.border-size}
border-color = ${bar/xenon.border-color}

padding-left = ${bar/xenon.padding-left}
padding-right = ${bar/xenon.padding-right}

module-margin-left = ${bar/xenon.module-margin-left}
module-margin-right = ${bar/xenon.module-margin-right}

font-0 = ${bar/xenon.font-0}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-overline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-overline = ${self.label-focused-overline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/bspwm]
type = internal/bspwm

pin-workspaces = false

label-focused-background = ${colors.background-alt}
label-focused-overline= ${colors.primary}
label-focused-padding = 2

label-occupied-padding = 1

label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/cpugraph]
type = internal/cpu
interval = 1
format = <ramp-coreload>
format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-overline = ${colors.secondary}
label = CPU %percentage-cores%%

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/cpuload]
type = custom/script
exec = cpu-usage
format-prefix = "CPU "
format-overline = ${colors.secondary}
interval = 1

[module/cpufreq]
type = custom/script
exec = sysinfo cpufreq
format-overline = ${colors.secondary}
interval = 1

[module/memory]
type = internal/memory
interval = 1
format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-overline = ${colors.ternary}
label = RAM %gb_used%

[module/wireless]
type = internal/network
interface = wlp3s0
interval = 1
label-connected = NET %downspeed% %upspeed%
format-connected-overline = ${colors.secondary}

[module/wired]
type = internal/network
interface = enp25s0
interval = 1
label-connected = NET %downspeed% %upspeed%
format-connected-overline = ${colors.secondary}

[module/date]
type = internal/date
interval = 10

date = "%A, %B %d"
time = %H:%M

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-overline = ${colors.ternary}

label = %date% - %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-volume-overline = ${colors.secondary}
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-prefix = 
format-muted-foreground = ${colors.foreground-alt}
label-muted = MUTED

[module/backlight]
type = internal/backlight

card = intel_backlight
format = <label>
label = BAC %percentage%%

format-overline = ${colors.secondary}
label-foreground = ${root.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 98

format-charging = <label-charging>
format-charging-overline = ${colors.secondary}
label-charging = CHR %percentage%%

format-discharging = <label-discharging>
format-discharging-overline = ${self.format-charging-overline}
label-discharging = BAT %percentage%%

format-full-prefix = 
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-overline = ${self.format-charging-overline}

[module/battery_usage]
type = custom/script
exec = sysinfo battery_usage
format-overline = ${colors.secondary}
interval = 1

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80

format = <label>
format-overline = ${colors.secondary}
format-warn = <label-warn>
format-warn-overline = ${self.format-overline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

[module/temperature_desktop]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon0/temp1_input
thermal-zone = 0
warn-temperature = 80

format = <label>
format-overline = ${colors.secondary}
format-warn = <label-warn>
format-warn-overline = ${self.format-overline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

[module/title]
type = internal/xwindow

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
