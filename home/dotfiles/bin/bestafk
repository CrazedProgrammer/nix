#!/usr/bin/env bash

function launch {
	killall java
	MultiMC 2>&1 & >/dev/null
	sleep 1
	xdotool mousemove 149 139 click 1
	sleep 0.05
	xdotool click 1
	sleep 5
	xdotool search --name "MultiMC" windowkill
	xdotool mousemove 897 615
	sleep 60
	xdotool click 1
	sleep 1.5
	xdotool mousemove 458 236
	sleep 0.5
	xdotool click 1
}

function reconnect {
	xdotool mousemove 1003 625
	sleep 0.5
	xdotool click 1
	sleep 1.5
	xdotool mousemove 458 236
	sleep 0.5
	xdotool click 1
}

launch
while true; do
	reconnect

	sleep 600
done
